@using APS.Models

@model User

@{
    ViewBag.Title = "APSmini";
}
<style>
    body {
        padding-top: 10%;
        padding-bottom: 10%;
    }

    a:hover{
        text-decoration: none;
    }

    #mainForm {
        box-shadow: 10px 10px gray;
    }

    #brand {
        text-shadow: 0px 4px 3px rgba(0,0,0,0.4), 0px 8px 13px rgba(0,0,0,0.1), 0px 18px 23px rgba(0,0,0,0.1);
    }
</style>

<body style="background-color:aqua">
    <div class="row" style="">
        <!--로그인 폼 디자인-->
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <a href="/Account/Login"><h2 style="color: white; text-align:center; margin-bottom:30px;" id="brand">APS_mini</h2></a>
            <div class="container" id="mainForm" style="align-content:center; border:1px solid black; height:400px; background-color:white;">
                <div class="row" style="width:100%; height:400px; margin-left:auto; margin-right:auto;">
                    <div class="col-lg-2" style=""></div>
                    <div class="col-lg-8" style="padding-top:20%;">
                        <div><h2 style="text-align:center;">[ 회원 가입 성공 ]</h2></div>
                        <div><h5 style="text-align:center; margin:20px 0;"><span style="color:red;">@Html.DisplayFor(model => model.UserName)</span>님 안녕하세요!</h5></div>
                        <div style="text-align:center;">
                            <a href="@Url.Action("Index","Board")" style="margin-right:auto; margin-left:auto; margin-top:40px;" class="btn btn-lg btn-primary btn-block">
                                시작하기
                            </a>
                        </div>
                        <div style="text-align:center;">
                            <a href="@Url.Action("UserInfo","Account")" style="margin:20px auto;" class="btn btn-lg btn-danger btn-block">
                                회원정보 수정
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-2" style=""></div>
                </div>
            </div>
        </div>
        <!--로그인 폼 디자인-->
        <div class="col-lg-4"></div>
    </div>
</body>