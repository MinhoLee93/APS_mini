
@{
    ViewBag.Title = "APSmini";
}



<style>
    body {
        padding-top: 10%;
        padding-bottom: 10%;
    }

    label.error {
        float: left;
        clear: both;
    }

    input.error {
        border-color: #ff0000;
        -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    }

        input.error:focus {
            border-color: #ff0000;
            -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 6px #c35e5e;
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 6px #c35e5e;
        }

    #mainForm {
        box-shadow: 10px 10px gray;
    }

    a:hover {
        text-decoration: none;
    }

    #brand {
        text-shadow: 0px 4px 3px rgba(0,0,0,0.4), 0px 8px 13px rgba(0,0,0,0.1), 0px 18px 23px rgba(0,0,0,0.1);
    }
</style>

<script>

    $(document).ready(function () {


        // Login Form Validation
        $('form').validate({
            rules: {
                txtUserID: {
                    required: true,
                },
                txtPassword: {
                    required: true
                }
            },
            messages: {
                txtUserID: {
                    required: "",
                },
                txtPassword: {
                    required: "",
                }
            }
        });


    });
</script>

<body style="background-color:aqua">
    <div class="row" style="">
        <!--로그인 폼 디자인-->
        <div class="col-lg-4"></div>
        <div class="col-lg-4" style="align-content:center;">
            <a href="/Account/Login"><h2 style="color: white; text-align:center; margin-bottom:30px;" id="brand">APS_mini</h2></a>
            <div class="container" id="mainForm" style="align-content:center; padding-top:50px; padding-bottom:50px; border:1px solid black; background-color:white; ">
                <div style="margin-left:auto; margin-right:auto; align-content:center;">
                    <div class="container">
                        <div style="margin-left:auto; margin-right:auto; align-content:center; max-width:280px;">
                            <!--로그인 폼-->
                            <form class="form-signin" role="form" action="/Account/Login" method="post">
                                <h3 class="form-signin-heading" style="">APS mini에 로그인</h3>
                                <hr />
                                <input type="text" id="txtUserID" name="txtUserID" class="form-control" placeholder="User ID" style="margin-bottom:10px;" required autofocus>
                                <input type="password" id="txtPassword" name="txtPassword" class="form-control" placeholder="Password" style="margin-bottom:10px;" required>
                                <div><h>계정이 없으십니까? &nbsp;</h>@Html.ActionLink("만들기", "Register", "Account", new { area = "" }, null)<br /></div>
                                <input id="btnSignIn" type="submit" class="btn btn-lg btn-danger btn-block" value="로그인" style="margin-top:20px;" onclick="checkPassword(); return false" />
                            </form>
                            <!--로그인 폼-->
                            <!--게시판 이동-->
                            <a href="@Url.Action("TempUser","Account")">
                                <input type="button" class="btn btn-lg btn-primary btn-block" value="체험하기" style="margin-top:10px;" />
                            </a>
                            <!--게시판 이동-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--로그인 폼 디자인-->
        <div class="col-lg-4"></div>
    </div>
</body>
@Html.Raw(TempData["msg"])

@section scripts{

}
