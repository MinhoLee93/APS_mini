
@{
    ViewBag.Title = "APSmini";
}
<script>
    $(document).ready(function () {
        $('form').validate({
            rules: {
                txtDomainID: { required: true }
            }
        });
    });
</script>
<body>
    <div class="row" style="">
        <!--로그인 폼 디자인-->
        <div class="col-lg-4"></div>
        <div class="col-lg-4" style="align-content:center;">
            <h2 style="color:white; text-align:center; margin-bottom:30px;">APS_mini</h2>
            <div class="container" style=" padding-left: 25%; padding-right:25%; padding-top:50px; padding-bottom:50px; border:1px solid black; background-color:white; ">
                <!--로그인 폼-->
                <form class="form-signin" role="form" action="/Account/Login" method="post">
                    <h3 class="form-signin-heading" style="">APS mini에 로그인</h3>
                    <input type="text" id="txtUserID" name="txtDomainID" class="form-control" placeholder="User ID" style="margin-bottom:10px;">
                    <input type="password" id="txtPassword" name="txtPassword" class="form-control" placeholder="Password" style="margin-bottom:10px;">
                    <h>계정이 없으십니까? &nbsp;</h>@Html.ActionLink("만들러 가기", "Register", "Account", new { area = "" }, null)<br />
                    <input id="btnSignIn" type="submit" class="btn btn-lg btn-danger btn-block" value="Sign in" style="margin-top:10px;" />
                </form>
                <!--로그인 폼-->
                <!--게시판 이동-->
                <a href="@Url.Action("Index","Board")">
                    <input type="button" class="btn btn-lg btn-primary btn-block" value="게시판" style="margin-top:10px;" />
                </a>
                <!--게시판 이동-->
            </div>
        </div>
        <!--로그인 폼 디자인-->
        <div class="col-lg-4"></div>
    </div>
</body>

